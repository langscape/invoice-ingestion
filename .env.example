# Azure AI Foundry (Claude models)
INVOICE_AZURE_AI_ENDPOINT=https://your-deployment.eastus2.models.ai.azure.com
INVOICE_AZURE_AI_API_KEY=

# Azure OpenAI (GPT models)
INVOICE_AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
INVOICE_AZURE_OPENAI_API_KEY=

# Model Configuration (Azure deployment names)
INVOICE_CLASSIFICATION_MODEL=claude-haiku-4-5-20251001
INVOICE_EXTRACTION_MODEL=claude-sonnet-4-5-20250929
INVOICE_SCHEMA_MAPPING_MODEL=claude-haiku-4-5-20251001
INVOICE_AUDIT_MODEL=gpt-4o

# Database
INVOICE_DATABASE_URL=postgresql+asyncpg://invoice:invoice@localhost:5432/invoice_ingestion

# Azure Blob Storage
INVOICE_BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=...;AccountKey=...;EndpointSuffix=core.windows.net
INVOICE_BLOB_IMPORTED_CONTAINER=imported
INVOICE_BLOB_EXTRACTED_CONTAINER=extracted

# Confidence Thresholds
INVOICE_AUTO_ACCEPT_SIMPLE=0.95
INVOICE_AUTO_ACCEPT_COMPLEX=0.90
INVOICE_TARGETED_REVIEW_SIMPLE=0.80
INVOICE_TARGETED_REVIEW_COMPLEX=0.70

# Pipeline Settings
INVOICE_DPI=300
INVOICE_QUALITY_THRESHOLD=0.3
INVOICE_LLM_TEMPERATURE=0.0
INVOICE_LLM_TIMEOUT=120

# Feature Flags
INVOICE_ENABLE_FAILOVER=true
INVOICE_ENABLE_LEARNING_LOOP=true
INVOICE_ENABLE_DRIFT_DETECTION=true

# API
INVOICE_API_HOST=0.0.0.0
INVOICE_API_PORT=8000
INVOICE_CORS_ORIGINS=["http://localhost:3000"]
